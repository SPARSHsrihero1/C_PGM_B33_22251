#include <stdio.h>

/* Program to find the sum of the series:  1 + 3/4 + 5/6 + 7/8 + ... up to n terms

int main() {
    int n, k;
    float term, sum = 0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    for (k = 1; k <= n; k++) {
        term = (float)(2 * k - 1) / (2 * k);
        sum += term;
    }

    printf("Sum of the series up to %d terms is: %.4f\n", n, sum);

    return 0;
}
