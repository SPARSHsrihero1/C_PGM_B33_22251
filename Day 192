#include <stdio.h>

/* Program to find the sum of digits of a number.


int main() {
    int num, digit, sum = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    while (num != 0) {
        digit = num % 10;   // Get the last digit
        sum += digit;       // Add it to the sum
        num /= 10;          // Remove the last digit
    }

    printf("Sum of digits is: %d\n", sum);

    return 0;
}
